#utils
  a#playlist(
    href="javascript:window.muzik.togglePlaylist();",
    title="playlist"
  )
    include icons/playlist
  a#repeat(href="javascript:window.muzik.repeat();", title="repeat")
    include icons/repeat
  a#repeat1.hide.active(
    href="javascript:window.muzik.repeat();",
    title="repeat one"
  )
    include icons/repeat1
  a#shuffle(href="javascript:window.muzik.shuffle();", title="shuffle")
    include icons/shuffle
  a#share(href="javascript:window.muzik.share();", title="share")
    include icons/share
  a#volume(href="javascript:window.muzik.showVolume();", title="volume")
    include icons/volume
  a#muted.hide(href="javascript:window.muzik.showVolume();", title="volume")
    include icons/mute
  #volume-wrapper.hide
    input#volume-range(
      type="range",
      min="0",
      max="100",
      step="1",
      value="50",
      oninput="window.muzik.volume(this.value);",
      onchange="window.muzik.volume(this.value);"
    )
